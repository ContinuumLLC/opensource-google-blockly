{
  "name": "opensource-google-blockly",
  "version": "1.0.0",
  "main": "dist/opensource-google-blockly.js",
  "files": [
    "dist"
  ],
  "repository": "ContinuumLLC/opensource-google-blockly",
  "publishConfig": {
    "registry": "http://artifact.corp.continuum.net:8081/artifactory/api/npm/Local-NPM"
  },
  "scripts": {
    "postinstall": "if-env NODE_ENV=RMM && echo '' || npm run lerna:bootstrap",
    "lerna:bootstrap": "lerna bootstrap",
    "clean": "rimraf build dist build lib",
    "build": "cross-env NODE_ENV='dt' webpack --config ./config/webpack/webpack.config.prod.js",
    "build:watch": "npm run clean && cross-env NODE_ENV='development' webpack --watch --config ./config/webpack/webpack.config.prod.js",
    "ci": "concurrently \"npm run build\""
  },
  "license": "Apache-2.0",
  "private": true,
  "devDependencies": {
    "if-env": "^1.0.4",
    "lerna": "^2.10.2",
    "platform-common-vendor": "1.0.7-97",
    "webpack-merge-and-include-globally": "^2.1.14"
  }
}
